			mui.init();
			function plus1() {
				var n = document.getElementById("num1");
				if (parseInt(n.innerHTML) == 0) {
					n.innerHTML = parseInt(n.innerHTML) + 1;
				} else {
					n.innerHTML = parseInt(n.innerHTML) - 1;
				}
			}

			function plus2() {
				var n = document.getElementById("num2");
				if (parseInt(n.innerHTML) == 0) {
					n.innerHTML = parseInt(n.innerHTML) + 1;
				} else {
					n.innerHTML = parseInt(n.innerHTML) - 1;
				}
			}

			function plus3() {
				var n = document.getElementById("num3");
				if (parseInt(n.innerHTML) == 0) {
					n.innerHTML = parseInt(n.innerHTML) + 1;
				} else {
					n.innerHTML = parseInt(n.innerHTML) - 1;
				}
			}

			function plus4() {
				var n = document.getElementById("num3");
				n.innerHTML = parseInt(n.innerHTML) + 1;
			}
		</script>
